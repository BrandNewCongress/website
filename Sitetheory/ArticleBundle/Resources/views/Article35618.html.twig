{% extends 'SitetheoryArticleBundle::Article.html.twig' %}


{% set sectionNameHardCoded = 'Candidates' %}
{% set sectionMenuHardCoded = '1' %}
{% set sectionMenuActive = 'candidatesActive' %}

{# Hide sidebar on desktop #}
{% set bootstrapColumnSidebar = 'hide-gt-xs' %}
{% set bootstrapColumnMain = 'flex=100' %}

{# Hide gutter in main column #}
{% block mainColumnGutter %}
{% endblock mainColumnGutter %}

{# Hide footer signup form #}
{% block footerJoin %}
{% endblock footerJoin %}

{% block contentType %}
<div id="candidateListPage" class="profileList">

    <p class="divCenter alignCenter pullout">We are excited to announce our first five potential candidates (<a href="#candidateList">below</a>)! We need to convince them we have the support needed to run their campaign.</p>


    <h1>Progress</h1>
    <div id="callToAction" class="borderDashedBold shellVerticalPadding" ng-controller="CustomApi" options='{"controller":"/people/count", "onLoad": "fetch", "onTime": {"time": "10s", "method":"fetch"}}'>
        <p class="intro alignCenter divCenter"><strong>If we get 500,000 people to sign up, we believe that we can convince these five people to run.</strong></p>

        <div layout="row" layout-wrap ng-cloak>
            <div flex="100" flex-gt-sm="33" flex-order="2" flex-order-gt-sm="1">
                <div id="signUpProgress"class="positionAnchor">
                    <div id="progressNumbers" class="positionAll">
                        <div id="startNumber" class="positionLeftBottom smallLabel fontBody salmonText">0</div>
                        <div id="endNumber" class="positionRightBottom smallLabel fontBody salmonText">500K</div>
                        <div id="numberLine"></div>
                    </div>
                    <div id="progressBarContainer" class="positionAll">
                        <div id="progressBar" class="positionLeftTop salmon" ng-style="{width: (100*(results.count/500000))+'%', 'max-width': '100%'}"></div>
                    </div>
                    {% embed '@SitetheoryTemplateCustomBundle/Resources/public/images/progressBarCover.svg' %}{% block id %}footerRedditIcon{% endblock %}{% endembed %}
                </div>
            </div>
            <div flex="100" flex-gt-sm="33" flex-order="1" flex-order-gt-sm="2">
                <div class="divCenter alignCenter">
                    <div id="signUpLabel" class="divCenter">
                        <div class="starLeft">
                            <div class="starRight">
                                <div class="starText fontPrimary salmonText">
                                    Right Now
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="totalSignUp" class="borderDashed fontSecondary salmonText" count-up start-val="0" end-value="results.count" duration="2" decimals="1" scroll-spy-event="elementScrolledIntoView" scroll-spy></div>
                    {#<input type="text" ng-model="results.count">#}
                </div>
            </div>
            <div flex="100" flex-gt-sm="33" flex-order="3">
                <div id="candidateJoin" class="joinForm pullRight">
                    <p hide-gt-sm class="alignCenter divCenter"><strong>Sign up and help us convince our new draftees to run!</strong></p>
                    {{ block('registrationForm') }}
                </div>
            </div>
        </div>
    </div>

    <a name="candidateList"></a>
    <h1>Our Draftees</h1>
    <div class="borderDashedBold">
        <div id="profileList">
            <div layout="row" layout-wrap>

                {# Profile Item 1 #}
                <div class="profileContainer" flex="100" flex-gt-xs="50">
                    <div layout="column" class="profileItem">
                        <div flex-order="2" flex-order-gt-xs="1" class="clearfix">
                            <div class="profileImage">
                                <a href="/Article/2016-12-11-10h56m24s">
                                    <img src="{{ asset('bundles/sitetheorytemplatecustom/images/candidates/LindaWayman.jpg') }}" alt="">
                                </a>
                            </div>
                            <h2>Linda Wayman</h2>
                            <h4>Educator</h4>
                            <p class="profileBody">Decades-long educator in North Philadelphia who who became a superintendent, but stepped down to become principal of a chronically failing high school, turning the school around.
                                <a href="/Article/2016-12-11-10h56m24s" class="readMore fontBody">Read More</a>
                            </p>
                        </div>
                        <div flex-order="1" flex-order-gt-xs="2" class="profileExtra backgroundDark">
                            <div class="starLeft starWhite">
                                <div class="starRight starWhite">
                                    <div class="starText fontPrimary alignCenter">
                                        Pennsylvania 1st
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {# End Profile Item #}

                {# Profile Item 2 #}
                <div class="profileContainer" flex="100" flex-gt-xs="50">
                    <div layout="column" class="profileItem">
                        <div flex-order="2" flex-order-gt-xs="1" class="clearfix">
                            <div class="profileImage">
                                <a href="/Jordyn-Lexton">
                                    <img src="{{ asset('bundles/sitetheorytemplatecustom/images/candidates/JordynLexton.jpg') }}" alt="">
                                </a>
                            </div>
                            <h2>Jordyn Lexton</h2>
                            <h4>Fellowship Founder</h4>
                            <p class="profileBody">Former teacher at Rikers Island prison; while campaigning to stop convicting children as adults, created Drive Change, a 1-year fellowship program in the food truck industry to help young people returning home from prison get jobs and education.
                                <a href="/Jordyn-Lexton" class="readMore fontBody">Read More</a>
                            </p>
                        </div>
                        <div flex-order="1" flex-order-gt-xs="2" class="profileExtra backgroundDark">
                            <div class="starLeft starWhite">
                                <div class="starRight starWhite">
                                    <div class="starText fontPrimary alignCenter">
                                        New York 12th
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {# End Profile Item #}
                {# Profile Item 3 #}
                <div class="profileContainer" flex="100" flex-gt-xs="50">
                    <div layout="column" class="profileItem">
                        <div flex-order="2" flex-order-gt-xs="1" class="clearfix">
                            <div class="profileImage">
                                <a href="/Kurt-Rietema">
                                    <img src="{{ asset('bundles/sitetheorytemplatecustom/images/candidates/KurtRietema.jpg') }}" alt="">
                                </a>
                            </div>
                            <h2>Kurt Rietema</h2>
                            <h4>Youth Pastor</h4>
                            <p class="profileBody">Youth pastor for over a decade with YouthFront; started “Neighbor to Neighbor” to help immigrants and marginalized people become homeowners by creating fair, low-interest lending partnerships between churches and families that can’t access traditional home mortgages.
                                <a href="/Kurt-Rietema" class="readMore fontBody">Read More</a>
                            </p>
                        </div>
                        <div flex-order="1" flex-order-gt-xs="2" class="profileExtra backgroundDark">
                            <div class="starLeft starWhite">
                                <div class="starRight starWhite">
                                    <div class="starText fontPrimary alignCenter">
                                        Kansas 3rd
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {# End Profile Item #}
                {# Profile Item 4 #}
                <div class="profileContainer" flex="100" flex-gt-xs="50">
                    <div layout="column" class="profileItem">
                        <div flex-order="2" flex-order-gt-xs="1" class="clearfix">
                            <div class="profileImage">
                                <a href="/Chardo-Richardson">
                                    <img src="{{ asset('bundles/sitetheorytemplatecustom/images/candidates/ChardoRichardson.jpg') }}" alt="">
                                </a>
                            </div>
                            <h2>Chardo Richardson</h2>
                            <h4>Civil Rights Lawyer</h4>
                            <p class="profileBody">Air Force veteran with five tours of duty in Iraq and Afghanistan; now President of Central Florida ACLU chapter, fighter for workers’ rights with Working America, and founded Think LegalEase, a series of YouTube videos to make the law accessible.
                                <a href="/Chardo-Richardson" class="readMore fontBody">Read More</a>
                            </p>
                        </div>
                        <div flex-order="1" flex-order-gt-xs="2" class="profileExtra backgroundDark">
                            <div class="starLeft starWhite">
                                <div class="starRight starWhite">
                                    <div class="starText fontPrimary alignCenter">
                                        Florida 9th
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {# End Profile Item #}        

                {# Profile Item 5 #}
                <div class="profileContainer" flex="100" flex-gt-xs="50">
                    <div layout="column" class="profileItem">
                        <div flex-order="2" flex-order-gt-xs="1" class="clearfix">
                            <div class="profileImage">
                                <a href="/Tynisha-Tyson">
                                    <img src="{{ asset('bundles/sitetheorytemplatecustom/images/candidates/TynishaTyson.jpg') }}" alt="">
                                </a>
                            </div>
                            <h2>Tynisha Tyson</h2>
                            <h4>Social Worker</h4>
                            <p class="profileBody">Social worker at Milner Elementary; works with children who suffer from abuse, neglect, and extreme poverty to be an anchor in their lives. Has actively continued working as a social worker to help kids most in need despite opportunities to “move up.”
                                <a href="/Tynisha-Tyson" class="readMore fontBody">Read More</a>
                            </p>
                        </div>
                        <div flex-order="1" flex-order-gt-xs="2" class="profileExtra backgroundDark">
                            <div class="starLeft starWhite">
                                <div class="starRight starWhite">
                                    <div class="starText fontPrimary alignCenter">
                                        Connecticut 1st
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {# End Profile Item #}                    
            </div>
        </div>
    </div>
</div>

{% endblock contentType %}