                    dynamicOptions: {}
                };

                // Merge Custom Options
                if ($attrs.options && _.isJSON($attrs.options)) $scope.options = _.extendDeep($scope.options, JSON.parse($attrs.options));
                $scope.options.prototype.url = $scope.options.url + $scope.options.controller;

                $scope.states = [
